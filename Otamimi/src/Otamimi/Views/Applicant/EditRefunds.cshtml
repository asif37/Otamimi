@model Otamimi.ViewModels.RequestViewModel
@{
    ViewData["Title"] = "Edit Refund Request";
}
<br />
<br />
<br />
<div class="container">
    <form action="" method="post">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">             
                @Html.HiddenFor(s => s.refund.Id);
                <div class="refund">
                    <h3>Update Refunds request</h3>
                    <div class="form-group">
                        @Html.Label("IBAN")
                        @Html.TextBoxFor(s => s.refund.IBAN, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("To Account Holder FullName")
                        @Html.TextBoxFor(s => s.refund.ToAccountHolderFullName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Payrol")
                        @Html.TextBoxFor(s => s.refund.Payroll.Id, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Amount")

                        @Html.TextBoxFor(s => s.refund.Amount, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        @Html.Label("Bank")
                        @*<select class="form-control">
                            <option value="MisFund">HBL</option>
                            <option value="refund">ABL</option>
                            <option value="refund">Habib Politon</option>
                        </select>*@
                        @Html.DropDownList("refund.Bank.Id", new SelectList(ViewBag.BanksList, "Id", "EnglishName",Model.refund.BankId),new { @class="form-control"})


                    </div>
                    <div class="form-group">
                        @Html.Label("Country")
                        @*<select class="form-control">
                            <option value="MisFund">Pakistan</option>
                            <option value="refund">USA</option>
                            <option value="refund">UK</option>
                        </select>*@
                        @Html.DropDownList("refund.Country.Id", new SelectList(ViewBag.CountryList, "Id", "Name",Model.refund.CountryId), new { @class = "form-control" })


                    </div>


                </div>
                <div class="form-group">
                    @Html.Label("Transection Date")
                    @Html.TextBoxFor(s => s.refund.TransactionTime, new { @class = "form-control",@id="transDate"})
                </div>
                <div class="form-group">
                    <button type="submit" value="Send Reuquest" class="btn btn-primary">Upsate Reuquest</button>
                </div>
            </div>
        </div>

    </form>
</div>
<script type="text/javascript">
    $(function () {
        $("#transDate").datepicker()
       
    })
</script>